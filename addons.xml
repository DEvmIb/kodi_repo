<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="service.takealug.epg-grabber" name="Takealug EPG Grabber" version="1.1.8+matrix"
        provider-name="DeBaschdi, Ad0lar">
        <requires>
            <import addon="xbmc.python" version="2.25.0" />
            <import addon="script.module.requests" />
        </requires>
        <extension point="xbmc.service" library="service.py" start="startup">
            <dir minversion="19.0.0">
                <datadir>https://raw.githubusercontent.com/DEvmIb/kodi_repo/master/addons.xml</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <platform>all</platform>
            <summary>EPG Grabber</summary>
            <description lang="en">Grabbs EPG Data from Different IPTV Sources and generate an xmltv
                Guide</description>
            <description lang="de">Grabbt EPG Daten von verschiedenen IPTV Quellen und erstellt eine
                guide.xml</description>
            <source>https://github.com/DEvmIb/kodi_repo/tree/master/service.takealug.epg-grabber/</source>
            <forum>https://www.kodinerds.net/index.php/Thread/64901-RELEASE-Takealug-EPG-Grabber/</forum>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
                <screenshot>fanart.jpg</screenshot>
                <screenshot>screenshot3.png</screenshot>
                <screenshot>screenshot1.png</screenshot>
                <screenshot>screenshot2.png</screenshot>
            </assets>
            <news lang="en">1.1.8+matrix Overhaul</news>
        </extension>
    </addon>
    <addon id="repository.ad0lar" name="DEvmIb Repository" version="1.0"
        provider-name="Ad0lar, fds97AVVS, DEvmIb">
        <requires>
            <import addon="xbmc.addon" version="12.0.0" />
        </requires>
        <extension point="xbmc.addon.repository" name="DEvmIb Repository">
            <dir>
                <info compressed="false">
                    https://raw.githubusercontent.com/DEvmIb/kodi_repo/master/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/DEvmIb/kodi_repo/master/addons.xml.md5</checksum>
                <datadir>https://raw.githubusercontent.com/DEvmIb/kodi_repo/master/zip</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Various Addons for Kodi</summary>
            <description></description>
            <disclaimer></disclaimer>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>icon.png</fanart>
            </assets>
        </extension>
    </addon>
</addons>